#/bin/sh
echo ""
echo ""
echo "MasterControl called.  System not completely upgraded."
echo "-register new kernel"
/sbin/lilo

if [ -e /tmp/upgrade/lib ]; then
	echo -n "-copy new kernel modules... "
	/usr/bin/cp -a /tmp/upgrade/lib/* /lib
fi

echo "-depmod modules"
/sbin/depmod

sleep 2

echo "Reboot."
echo ""
echo ""
/sbin/reboot

exit 0 
